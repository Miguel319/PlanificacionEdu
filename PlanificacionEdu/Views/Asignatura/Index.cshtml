@model IEnumerable<BOL.Asignatura>

@{
    ViewBag.Title = "Index";
}
<br />
<h2 class="text-center">Asignaturas</h2>
<hr />

@if (TempData["ErrAsignatura"] != null)
{
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">x</button>
        @TempData["ErrAsignatura"].ToString()
    </div>
}

<p>
    @Html.ActionLink("Imprimir listado", "ImprimirListado", "Asignatura", new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover table-responsive table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.ActionLink("Agregar", "Agregar", "Asignatura", new { @class = "btn btn-primary col-md-3" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Descripcion, "Detalles", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirmarAsignatura();" })
            </td>
        </tr>
    }
</table>

<script>
    function confirmarAsignatura() {
        confirm('¿Seguro que quieres eliminar esta asignatura?');
    }
</script>