<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Planificación educativa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Acme|Arapey" rel="stylesheet">
    
    <style>
        h2, h1, h3 {
            font-family: 'Acme', sans-serif;
        }
        body {
            font-family: 'Arapey', serif;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestión docente", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Planificación", "Index", "Planificacion")</li>
                            <li>@Html.ActionLink("Indicador", "Index", "Indicador")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">@User.Identity.Name</a></li>
                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "IniciarSesion")</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Iniciar sesión", "Index", "IniciarSesion")</li>
                            <li>@Html.ActionLink("Registrarse", "Index", "Registro")</li>
                        </ul>
                    }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Planificación educativa</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
